<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8">

    <TextView
        android:id="@+id/et_material_code"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/material_coding"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_material_coding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入物料编码..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/et_material_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toTopOf="@id/et_material_code" />

    <TextView
        android:id="@+id/tv_batch_number"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="start"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/batch_number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toBottomOf="@id/et_material_code" />

    <EditText
        android:id="@+id/et_batch_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入批次号..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_batch_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_batch_number"
        app:layout_constraintTop_toTopOf="@id/tv_batch_number" />

    <TextView
        android:id="@+id/tv_item_description"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="start"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/material_description"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toBottomOf="@id/tv_batch_number" />

    <EditText
        android:id="@+id/et_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入物料描述..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_description"
        app:layout_constraintTop_toTopOf="@id/tv_item_description" />

    <TextView
        android:id="@+id/tv_common_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="start"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/common_name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toBottomOf="@id/tv_item_description" />

    <EditText
        android:id="@+id/et_common_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入通用名称..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_common_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_common_name"
        app:layout_constraintTop_toTopOf="@id/tv_common_name" />

    <TextView
        android:id="@+id/tv_specification"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="start"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/specification"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toBottomOf="@id/tv_common_name" />

    <EditText
        android:id="@+id/et_specification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入规格..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_specification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_specification"
        app:layout_constraintTop_toTopOf="@id/tv_specification" />

    <TextView
        android:id="@+id/tv_position"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="start"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/cargo_space"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_material_code"
        app:layout_constraintTop_toBottomOf="@id/tv_specification" />

    <EditText
        android:id="@+id/et_position"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_rectangle"
        android:gravity="start|center"
        android:hint="请输入仓位..."
        android:maxLines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_position"
        app:layout_constraintTop_toTopOf="@id/tv_position" />

</androidx.constraintlayout.widget.ConstraintLayout>