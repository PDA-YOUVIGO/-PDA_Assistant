<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.youvigo.wms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".search.SearchActivity"
            android:label="@string/search" />
        <activity
            android:name=".search.MaterialsSearchActivity"
            android:label="@string/materials_search" />
        <activity
            android:name=".search.EmployeeSearchActivity"
            android:label="@string/employee_search" />
        <activity
            android:name=".search.InternalOrderSearchActivity"
            android:label="@string/internal_order_search" />
        <activity
            android:name=".shelving.ShelvingActivity"
            android:label="@string/shelving" />
        <activity
            android:name=".product.FinishedProductsActivity"
            android:label="@string/finished_products" />
        <activity
            android:name=".deliver.DeliverActivity"
            android:label="@string/take_off" />
        <activity
            android:name=".outstock.ReservedOutBoundActivity"
            android:label="@string/out_of_stock" />
        <activity
            android:name=".outstock.NoReservedOutBoundActivity"
            android:label="@string/no_reserved_outbound" />
        <activity
            android:name=".outstock.NoReservedOutBoundDetailActivity"
            android:label="@string/title_activity_no_reserved_out_bound_detail" />
        <activity
            android:name=".warehouse.WarehouseInventoryActivity"
            android:label="@string/warehouse_inventory" />
        <activity
            android:name=".warehouse.WarehouseInventoryBrightDiskActivity"
            android:label="@string/warehouse_inventory_bright_disk" />
        <activity
            android:name=".warehouse.WarehouseInventoryBlindDiskActivity"
            android:label="@string/warehouse_inventory_bright_disk" />
        <activity
            android:name=".warehouse.WarehouseInventorySearchActivity"
            android:label="@string/warehouse_inventory_search" />
        <activity
            android:name=".warehouse.PositionMovementActivity"
            android:label="@string/position_movement" />
        <activity
            android:name=".inventory.SwitchStockLocationActivity"
            android:label="@string/switch_stock_locations" />
    </application>

</manifest>