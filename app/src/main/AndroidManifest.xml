<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.youvigo.wms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.youvigo.wms.BaseApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.youvigo.wms.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />

        <activity
            android:name="com.youvigo.wms.search.SearchActivity"
            android:label="@string/search" />
        <activity
            android:name=".search.MaterialsSearchActivity"
            android:label="@string/materials_search" />

        <activity
            android:name=".search.EmployeeSearchActivity"
            android:label="@string/employee_search" />

        <activity
            android:name=".search.InternalOrderSearchActivity"
            android:label="@string/internal_order_search" />

        <activity
            android:name=".shelving.ShelvingActivity"
            android:label="@string/shelving" />

        <activity
            android:name=".product.FinishedProductsActivity"
            android:label="@string/finished_products" />

        <activity
            android:name=".off.TakeOffActivity"
            android:label="@string/take_off" />

        <activity
            android:name=".outstock.OutOfStockActivity"
            android:label="@string/out_of_stock" />

        <activity
            android:name=".outstock.NoReservedOutboundActivity"
            android:label="@string/no_reserved_outbound" />

        <activity
            android:name=".warehouse.WarehouseInventoryActivity"
            android:label="@string/warehouse_inventory" />

        <activity
            android:name=".warehouse.PositionMovementActivity"
            android:label="@string/position_movement" />

        <activity
            android:name=".inventory.InventoryCheckActivity"
            android:label="@string/inventory_check" />

        <activity
            android:name=".inventory.SwitchStockLocationActivity"
            android:label="@string/switch_stock_locations" />
    </application>

</manifest>